# IMAP (Zimbra)
IMAP_HOST=mail.domain.com
IMAP_PORT=993
IMAP_USER=user@domain.com
IMAP_PASSWORD=CHANGE_ME
IMAP_FOLDER=INBOX/ONLINE

# Telegram
TELEGRAM_BOT_TOKEN=123:abc
TELEGRAM_CHAT_ID=123456789

# LLM Provider (Groq via OpenAI-compatible endpoint)
LLM_API_KEY=gsk_...
LLM_BASE_URL=https://api.groq.com/openai/v1
LLM_MODEL=llama-3.3-70b-versatile

# Moscow timezone inside container
TZ=Europe/Moscow
SCHEDULE_HOURS=10,12,14,16,18

# Safety / cost controls
MAX_EMAILS_PER_RUN=80
MAX_CHARS_PER_EMAIL=20000
SUMMARY_MAX_OUTPUT_TOKENS=220
DIGEST_MAX_OUTPUT_TOKENS=900

# Logging
LOG_LEVEL=INFO
